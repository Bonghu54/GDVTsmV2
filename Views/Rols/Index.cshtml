@model IEnumerable<GDVTsmV3.Models.Rol>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista Roles</h3>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-primary form-control">Crear Rol</a>
    </div>
</div>
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>Nombre Rol</th>
                <th>Descripcion</th>
                <th></th>
            </tr>
            @foreach(var rol in Model)
            {
                <tr>
                    <td>@rol.Nombre_Rol</td>
                    <td>@rol.Descripcion</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@rol.Rol_Id">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@rol.Rol_Id"
                        onclick="return confirm('Esta seguro de que quiere borrar la categoria?')'">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay Roles</p>
    }
</div>
