@model IEnumerable<GDVTsmV3.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-4">
        <h3>Lista Usuarios</h3>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-primary form-control">Crear Usuario</a>
    </div>
</div>
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>Nombre de Usuario</th>
                <th>Correo Electronico</th>
                <th>Contraseña</th>
                <th></th>
            </tr>
            @foreach (var rol in Model)
            {
                <tr>
                    <td>@rol.Nombre_Usuario </td>
                    <td>@rol.Correo_Electronico</td>
                    <td>@rol.Contrasena</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@rol.Usuario_Id">Editar</a>
                        <a class="btn btn-warning text-white" asp-action="AdministrarRol" asp-route-id="@rol.Usuario_Id">Administrar Rol</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@rol.Usuario_Id"
                           onclick="return confirm('Esta seguro de que quiere borrar el usuario?')'">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay Usuarios</p>
    }
</div>
