@page
@model GDVTsmV3.Views.Empleados.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].Persona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado[0].Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Empleado) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Persona_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Contrasena)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Empleado_Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Empleado_Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Empleado_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
