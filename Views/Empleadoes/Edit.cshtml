@model GDVTsmV3.Models.Empleado

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Empleado_Id" />
            <div class="form-group">
                <label asp-for="Persona_Id" class="control-label">Datos Persona</label>
                <select asp-for="Persona_Id" class="form-control" asp-items="ViewBag.Persona_Id"></select>
                <span asp-validation-for="Persona_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario_Id" class="control-label">Usuario</label>
                <select asp-for="Usuario_Id" class="form-control" asp-items="ViewBag.Usuario_Id"></select>
                <span asp-validation-for="Usuario_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />
<div class="btn btn-warning text-white">
    <a asp-action="Index" style="text-decoration:none">Volver a la Lista </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
