@model IEnumerable<GDVTsmV3.Models.Persona>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-4">
        <h3>Lista Personas</h3>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-primary form-control">Crear Persona</a>
    </div>
</div>
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Fecha de Nacimiento</th>
                <th>CI</th>
                <th></th>
            </tr>
            @foreach (var rol in Model)
            {
                <tr>
                    <td>@rol.Nombre</td>
                    <td>@rol.Apellido</td>
                    <td>@rol.Fecha_Nac</td>
                    <td>@rol.Ci</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@rol.Persona_Id">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@rol.Persona_Id"
                           onclick="return confirm('Esta seguro de que quiere borrar la Persona?')'">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay Personas</p>
    }
</div>